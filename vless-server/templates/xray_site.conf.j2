server {
    listen 80;
    # 443 ssl http2;
    server_name {{ domain_name }} www.{{ domain_name }};

    # SSL Certbot
    #ssl_certificate /etc/letsencrypt/{{ domain_name }}/{{ domain_name }}.cer;
    #ssl_certificate_key /etc/letsencrypt/{{ domain_name }}/{{ domain_name }}.key;

    # SSL parameters
    #ssl_protocols TLSv1.2 TLSv1.3;
    #ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384;
    #ssl_prefer_server_ciphers off;

    # site directory
    root /var/www/site;
    index index.html;

    location / {
        try_files $uri $uri/ =404;
    }

    # Дополнительные настройки для лучшей маскировки
    location /static/ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }
}
